# Pipeline Inspection System - Backend Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Camera Source
# Can be:
# - USB camera index: 0, 1, 2, etc.
# - RTSP stream: rtsp://camera-ip:554/stream
# - HTTP video: https://example.com/video.mp4
CAMERA_INDEX=https://test-videos.co.uk/vids/bigbuckbunny/mp4/h264/360/Big_Buck_Bunny_360_10s_1MB.mp4

# Camera Settings (only apply to USB cameras)
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# YOLO Model
MODEL_PATH=../models/yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# Detection Classes (comma-separated)
DEFECT_CLASSES=foreign_object,crack,rust,corrosion,sediment,leak

# Reports
REPORTS_DIR=../reports
ENABLE_PDF_REPORT=true
ENABLE_JSON_REPORT=true

# Logging
LOG_LEVEL=INFO
